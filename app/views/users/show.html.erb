<div class="main users-new">
  <div class="container">
    <div class="form-heading">Accont Information</div>
    <div class="form users-form">
      <div class="form-body">
      	<p>Name</p>
      	<%= @user.name %>

      	<p>Email</p>
      	<%= @user.email %>
        <% if @current_user.id == @user.id %>
          <%= link_to("Edit", edit_user_path(@user))%>
        <% end %>
      </div>
    </div>
  </div>
</div>