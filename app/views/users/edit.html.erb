<div class="main users-edit">
  <div class="container">
    <div class="form-heading">Edit Account</div>
    <div class="form users-form">
      <div class="form-body">
        <%= render 'shared/error_messages' %>
      	<%= form_for(@user, url: user_path, method: :put) do |f| %>
      		<%= f.label :Name %>
      		<%= f.text_field :name %>
      		<%= f.label :Email %>
      		<%= f.email_field :email %>
	        <%= f.submit :Save%>   
	    <% end %>
      </div>
    </div>
  </div>
</div>